---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Services from '../components/Services.astro';
---

<Layout title="eUprava - Digitalizacija javnih usluga">
  <div class="min-h-screen flex flex-col">
    <Navbar />
    <main class="flex-1">
      <div id="hero-container">
        <!-- Hero will be dynamically loaded here -->
      </div>
      <div id="services-container">
        <Services />
      </div>
    </main>
  </div>
</Layout>

<script>
  import { authService } from '../lib/authService';

  document.addEventListener('DOMContentLoaded', () => {
    const heroContainer = document.getElementById('hero-container');
    const servicesContainer = document.getElementById('services-container');
    
    if (heroContainer) {
      const isAuthenticated = authService.isAuthenticated();
      
      if (isAuthenticated) {
        // Load dashboard hero for authenticated users
        heroContainer.innerHTML = `
          <section class="relative text-foreground overflow-hidden min-h-screen flex items-center bg-main">
            <div class="absolute inset-0 w-full h-full">
              <img 
                src="/background.svg" 
                alt="Space background" 
                class="w-full h-full object-cover opacity-40"
              />
            </div>

            <div class="relative max-w-7xl mx-auto px-4 py-32">
              <div class="text-center mb-16">
                <h1 class="text-6xl font-bold mb-8 text-foreground">
                  Dobrodošli nazad, <span id="welcome-name" class="text-primary">Korisniče</span>!
                </h1>
                <p class="text-2xl mb-12 text-muted-foreground max-w-4xl mx-auto leading-relaxed">
                  Vaš personalizovani dashboard za upravljanje fakultetskim i zapošljavanje uslugama.
                </p>
              </div>
              
              <!-- Dashboard Cards -->
              <div class="flex justify-center gap-8 max-w-4xl mx-auto">
                <!-- University Services Card -->
                <div id="university-card" class="hidden bg-card/80 backdrop-blur-sm rounded-xl p-6 border border-border hover:bg-card/90 transition-all duration-300 hover:scale-105 shadow-lg w-80">
                  <div class="flex items-center space-x-4 mb-4">
                    <div class="p-3 bg-primary/20 rounded-lg">
                      <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-foreground">Fakultet</h3>
                  </div>
                  <p class="text-muted-foreground mb-4">
                    Upravljajte svojim studijama, pregledajte kurseve, ispite i akademske podatke.
                  </p>
                  <a 
                    href="/university-dashboard" 
                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors font-medium"
                  >
                    Otvori Dashboard
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>

                <!-- Employment Services Card -->
                <div id="employment-card" class="hidden bg-card/80 backdrop-blur-sm rounded-xl p-6 border border-border hover:bg-card/90 transition-all duration-300 hover:scale-105 shadow-lg">
                  <div class="flex items-center space-x-4 mb-4">
                    <div class="p-3 bg-green-500/20 rounded-lg">
                      <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2V6"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-foreground">Zapošljavanje</h3>
                  </div>
                  <p class="text-muted-foreground mb-4">
                    Pronađite posao, prijavite se na oglase i upravljajte svojim karijerom.
                  </p>
                  <a 
                    href="/employment-dashboard" 
                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors font-medium"
                  >
                    Otvori Dashboard
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>

                <!-- Admin Services Card -->
                <div id="admin-card" class="hidden bg-card/80 backdrop-blur-sm rounded-xl p-6 border border-border hover:bg-card/90 transition-all duration-300 hover:scale-105 shadow-lg">
                  <div class="flex items-center space-x-4 mb-4">
                    <div class="p-3 bg-purple-500/20 rounded-lg">
                      <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-foreground">Administracija</h3>
                  </div>
                  <p class="text-muted-foreground mb-4">
                    Upravljajte sistemom, korisnicima i konfiguracijama platforme.
                  </p>
                  <a 
                    href="/admin-dashboard" 
                    class="inline-flex items-center justify-center w-full px-4 py-2 bg-purple-500 text-white rounded-lg hover:bg-purple-600 transition-colors font-medium"
                  >
                    Otvori Dashboard
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </a>
                </div>


                <!-- Recent Activity Card -->
                <div class="bg-card/80 backdrop-blur-sm rounded-xl p-6 border border-border hover:bg-card/90 transition-all duration-300 hover:scale-105 shadow-lg w-80">
                  <div class="flex items-center space-x-4 mb-4">
                    <div class="p-3 bg-orange-500/20 rounded-lg">
                      <svg class="w-8 h-8 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-foreground">Nedavna Aktivnost</h3>
                  </div>
                  <div class="space-y-3">
                    <div class="text-sm text-muted-foreground">
                      <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        <span>Poslednja prijava: <span id="last-login">Danas</span></span>
                      </div>
                    </div>
                    <div class="text-sm text-muted-foreground">
                      <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                        <span>Status: <span class="text-green-500 font-medium">Aktivan</span></span>
                      </div>
                    </div>
                    <div class="text-sm text-muted-foreground">
                      <div class="flex items-center space-x-2">
                        <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
                        <span>Tip korisnika: <span id="user-type" class="font-medium">-</span></span>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </section>
        `;
        
        // Initialize dashboard functionality
        initializeDashboard();
      } else {
        // Load regular hero for non-authenticated users
        heroContainer.innerHTML = `
          <section class="relative text-foreground overflow-hidden min-h-screen flex items-center bg-main">
            <div class="absolute inset-0 w-full h-full">
              <img 
                src="/background.svg" 
                alt="Space background" 
                class="w-full h-full object-cover opacity-60"
              />
            </div>

            <div class="relative max-w-7xl mx-auto px-4 py-32">
              <div class="text-center">
                
                <h1 class="text-6xl font-bold mb-8 text-foreground">
                  Dobrodošli u eUpravu
                </h1>
                <p class="text-2xl mb-12 text-muted-foreground max-w-4xl mx-auto leading-relaxed">
                  Man I hate frontend dev. 
                </p>
                
                <div class="flex gap-6 justify-center mb-16">
                  <a 
                    href="/register" 
                    class="inline-flex items-center justify-center rounded-md font-medium transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 hover:scale-105 h-12 px-8 text-lg shadow-xl hover:shadow-2xl"
                  >
                    Registrujte se
                  </a>
                  <a 
                    href="/login" 
                    class="inline-flex items-center justify-center rounded-md font-medium transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 silver-line text-foreground hover:bg-astro-card-hover hover:scale-105 h-12 px-8 text-lg backdrop-blur-sm shadow-lg"
                  >
                    Prijavite se
                  </a>
                </div>
                
               
                </div>
              </div>
            </div>
          </section>
        `;
      }
    }
  });

  function initializeDashboard() {
    const currentUser = authService.getCurrentUser();
    
    if (currentUser) {
      // Set welcome name
      const welcomeName = document.getElementById('welcome-name');
      if (welcomeName) {
        welcomeName.textContent = currentUser.first_name;
      }

      // Show appropriate cards based on user type
      const universityCard = document.getElementById('university-card');
      const employmentCard = document.getElementById('employment-card');
      const adminCard = document.getElementById('admin-card');
      const userType = document.getElementById('user-type');

      if (userType) {
        const typeMap = {
          'STUDENT': 'Student',
          'PROFESSOR': 'Profesor',
          'ADMIN': 'Administrator',
          'EMPLOYER': 'Poslodavac',
          'CANDIDATE': 'Kandidat'
        };
        userType.textContent = typeMap[currentUser.user_type] || currentUser.user_type;
      }

      // Show relevant cards based on user type
      if (['STUDENT', 'PROFESSOR'].includes(currentUser.user_type)) {
        if (universityCard) universityCard.classList.remove('hidden');
      }
      
      if (['EMPLOYER', 'CANDIDATE'].includes(currentUser.user_type)) {
        if (employmentCard) employmentCard.classList.remove('hidden');
      }
      
      if (currentUser.user_type === 'ADMIN') {
        if (adminCard) adminCard.classList.remove('hidden');
      }

      // Set some mock statistics
      const totalSessions = document.getElementById('total-sessions');
      const daysActive = document.getElementById('days-active');
      
      if (totalSessions) totalSessions.textContent = (Math.floor(Math.random() * 50) + 10).toString();
      if (daysActive) daysActive.textContent = (Math.floor(Math.random() * 30) + 5).toString();

      // Quick action handlers
      const quickProfileBtn = document.getElementById('quick-profile-btn');
      const quickSettingsBtn = document.getElementById('quick-settings-btn');
      const quickHelpBtn = document.getElementById('quick-help-btn');

      if (quickProfileBtn) {
        quickProfileBtn.addEventListener('click', () => {
          console.log('Profile clicked');
        });
      }

      if (quickSettingsBtn) {
        quickSettingsBtn.addEventListener('click', () => {
          console.log('Settings clicked');
        });
      }

      if (quickHelpBtn) {
        quickHelpBtn.addEventListener('click', () => {
          console.log('Help clicked');
        });
      }
    }
  }
</script>