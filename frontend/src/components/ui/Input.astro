---
export interface Props {
  type?: 'text' | 'email' | 'password' | 'number' | 'tel' | 'url' | 'search' | 'date' | 'datetime-local';
  label?: string;
  placeholder?: string;
  value?: string;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  class?: string;
  id?: string;
  name?: string;
}

const { 
  type = 'text',
  label,
  placeholder,
  value,
  required = false,
  disabled = false,
  error,
  class: className = '',
  id,
  name,
  ...rest 
} = Astro.props;

const inputId = id || name || `input-${Math.random().toString(36).substr(2, 9)}`;
const inputClasses = `w-full px-3 py-2 border rounded-md bg-astro-card text-foreground placeholder:text-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent disabled:opacity-50 disabled:cursor-not-allowed ${error ? 'border-red-500' : 'border-input'} ${className}`;
---

<div class="space-y-1">
  {label && (
    <label for={inputId} class="block text-sm font-medium text-foreground">
      {label}
      {required && <span class="text-red-500 ml-1">*</span>}
    </label>
  )}
  <input
    id={inputId}
    name={name}
    type={type}
    placeholder={placeholder}
    value={value}
    required={required}
    disabled={disabled}
    class={inputClasses}
    {...rest}
  />
  {error && (
    <p class="text-sm text-red-500">{error}</p>
  )}
</div>
